---
import { Icon } from "astro-iconify";

import Card from "./Card.astro";
import CardHeading from "./CardHeading.astro";

const cards = [
  {
    icon: "material-symbols:grid-on",
    title: "What's a Bike Grid?",
    link: "/posts/what-is-a-bike-grid",
    description: "10% of streets. 10mph. Protected. All across Chicago.",
  },
  {
    icon: "material-symbols:edit-road-outline-rounded",
    title: "Why do we Jam?",
    link: "/posts/CBGN-direct-action-101",
    description: "Advocacy is good, but it's not cutting it. Read more here.",
  },
  {
    icon: "material-symbols:signpost-outline-rounded",
    title: "About us",
    link: "/about",
    description:
      "We're a grassroots group of Chicagoans who want to see safer streets. Learn more about the current organizers.",
  },
  {
    icon: "material-symbols:savings-outline-rounded",
    title: "Support Us",
    link: "https://www.gofundme.com/f/flags-and-flyers-for-bike-grid-now",
    description:
      "We'd love your support through gofundme so we can keep printing flyers, stickers, etc. Reach out on Social Media if you'd like some stickers!",
  },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-5 w-full">
  {
    cards.map((card) => (
      <Card link={card.link} notarget>
        <Icon name={card.icon} class="w-16 h-16" />
        <CardHeading>{card.title}</CardHeading>
        <p class="text-base">{card.description}</p>
      </Card>
    ))
  }
</div>
