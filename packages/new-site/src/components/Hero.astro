---
import BackgroundImage from "./BackgroundImage.astro";
import SocialIconList from "./SocialIconList.astro";
import Stack from "./Stack.astro";

export interface Props {
  title: string;
  tagline: string;
  headerImage: string;
}

const { title, tagline, headerImage } = Astro.props;
---

<BackgroundImage src={headerImage} alt="A blue grid map." dimmed>
  <Stack
    direction="column"
    align="center"
    justify="center"
    class="py-48"
    gap="2xl"
  >
    <div class="space-y-5 text-center">
      <h1 class="text-5xl font-bold">{title}</h1>
      <p class="text-lg font-medium">{tagline}</p>
    </div>

    <SocialIconList />
  </Stack>
</BackgroundImage>
