---
import BackgroundImage from "../old-pages/BackgroundImage.svelte";
import headerPhotoUrl from "../static/header-backdrop.jpeg";
import SocialIconList from "./SocialIconList.astro";
import Stack from "./Stack.astro";

export interface Props {
  title: string;
  tagline: string;
}

const { title, tagline } = Astro.props;
---

<BackgroundImage
  src={headerPhotoUrl}
  alt="A blue grid map."
  brightness={0.5}
  maxWidth={1020}
>
  <Stack
    direction="column"
    align="center"
    justify="center"
    class="py-48"
    gap="2xl"
  >
    <div class="space-y-5 text-center">
      <h1 class="text-5xl font-bold">{title}</h1>
      <p class="text-lg font-medium">{tagline}</p>
    </div>

    <SocialIconList />
  </Stack>
</BackgroundImage>
