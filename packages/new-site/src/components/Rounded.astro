---
import type { HTMLAttributes, HTMLTag } from "astro/types";

export type Props<T extends HTMLTag = "div"> = {
  as?: T;
  props?: HTMLAttributes<T>;
  focusable?: boolean;
  class?: string;
};

const {
  as: Component = "div",
  focusable = false,
  props,
  class: className,
} = Astro.props;
---

<Component
  {...props as any}
  class:list={[
    "rounded-2xl overflow-hidden shadow-lg bg-zinc-900",
    focusable &&
      "focus:outline-none focus:ring-2 focus:ring-white transition-all duration-150 ease-in-out",
    className,
  ]}
>
  <slot />
</Component>
