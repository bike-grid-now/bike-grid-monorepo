---
export interface Props {
  src: string;
  alt: string;
  class?: string;
  imageClass?: string;
  dimmed?: boolean;
  blurred?: boolean;
}
let {
  src,
  alt,
  class: className,
  imageClass,
  dimmed = false,
  blurred = false,
} = Astro.props;
---

<div class:list={[className, "relative w-full block"]}>
  <div
    class:list={[
      "absolute top-0 z-0 left-0 w-full h-full image overflow-hidden",
      dimmed ? "brightness-50" : blurred ? "brightness-75" : "",
      blurred && "blur-2xl saturate-50 contrast-75",
      !blurred && "flex justify-center items-center",
      imageClass,
    ]}
  >
    <img
      class:list={[
        blurred &&
          "absolute left-0 right-0 mx-auto t-[-20%] h-[140%] w-[140%] max-w-[200%]",
      ]}
      src={src}
      alt={alt}
    />
  </div>
  <div class="relative z-10">
    <slot />
  </div>
</div>
