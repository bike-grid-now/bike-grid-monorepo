---
import { Icon } from "astro-iconify";
import Rounded from "./Rounded.astro";
import Stack from "./Stack.astro";
export interface Props {
  link: string;
  notarget?: boolean;
}

const { link, notarget = false } = Astro.props;
---

<Rounded
  focusable
  as="a"
  props={{
    href: link,
    target: notarget ? "" : "_blank",
  }}
>
  <div
    class="hover:bg-red-700 text-white fill-current transition-all duration-150 ease-in-out p-8"
  >
    <Stack
      direction="column"
      align="center"
      justify="center"
      gap="xl"
      class="text-center"
    >
      <slot />
      <Icon
        name="material-symbols:arrow-circle-right-outline-rounded"
        class="w-16 h-16"
      />
    </Stack>
  </div>
</Rounded>

<style>
  .card:focus {
    outline: var(--space) solid var(--color-outline);
    outline-offset: var(--space);
  }
</style>
