---
import type { Image } from "../lib/sanity";
import SanityImage from "../components/SanityImage.astro";

export interface Props {
  poster: Image;
}

const { poster } = Astro.props;
---

<div class="card">
  <SanityImage
    image={poster}
    style="width: 100%; height: 100%; object-fit: contain; position: absolute; top: 0; left: 0; z-index: 2;"
  />

  <SanityImage
    image={poster}
    style="width: 100%; height: 100%; object-fit: cover; position: absolute; top: 0; left: 0; z-index: 1; filter: blur(10px);"
  />
</div>

<style>
  .card {
    background-color: var(--color-card);
    height: calc(150 * var(--space));
    border-radius: 15px;
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .card .swap {
    z-index: 99;
    position: absolute;
    top: calc(75 * var(--space));
    cursor: pointer;
    color: black;
    background-color: rgba(255, 255, 255, 0.4);
  }

  .card .swap.right {
    right: var(--space);
  }

  .card .swap.left {
    left: var(--space);
  }
</style>
