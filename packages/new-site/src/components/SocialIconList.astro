---
import SocialIcon from "./SocialIcon.astro";
import Stack from "./Stack.astro";

const socialIcons = [
  {
    name: "simple-icons:twitter",
    href: "https://www.twitter.com/bikegridnow",
  },
  {
    name: "simple-icons:instagram",
    href: "https://www.instagram.com/bikegridnow/",
  },
  {
    name: "simple-icons:facebook",
    href: "https://www.facebook.com/BikeGridNow/",
  },
  {
    name: "simple-icons:tiktok",
    href: "https://www.tiktok.com/@bikegridnow",
  },
  {
    name: "simple-icons:mastodon",
    href: "https://urbanists.social/@bikegridnow",
  },
  {
    name: "material-symbols:mail-outline-rounded",
    href: "mailto:grassroots@bikegridnow.org",
  },
];
---

<Stack direction="row" align="center" justify="center" gap="lg">
  {socialIcons.map((icon) => <SocialIcon {...icon} />)}
</Stack>
