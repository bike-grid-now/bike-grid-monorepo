---
import type { Image } from "../lib/sanity";
import BackgroundImage from "./BackgroundImage.astro";
import SanityImage from "./SanityImage.astro";

export interface Props {
  image?: Image;
  centerContent?: boolean;
}

const { centerContent, image } = Astro.props;

const Component = !image ? "div" : BackgroundImage;
---

<Component blurred image={image as any}>
  <div class="py-16 px-8">
    {
      image && (
        <SanityImage image={image} class="w-full max-w-sm mx-auto shadow-2xl" />
      )
    }
    <div
      class:list={[
        "mt-12 md:mt-16 w-full",
        centerContent && "flex flex-col justify-center items-center",
      ]}
    >
      <slot />
    </div>
  </div>
</Component>
