---
import BackgroundImage from "./BackgroundImage.astro";

export interface Props {
  src?: string;
  alt?: string;
  centerContent?: boolean;
}

const { alt, src, centerContent } = Astro.props;

const Component = !src ? "div" : BackgroundImage;
---

<Component blurred src={src as any} alt={alt as any}>
  <div class="py-16 px-8">
    <img class="w-full max-w-sm mx-auto shadow-2xl" {src} {alt} />
    <div
      class:list={[
        "mt-12 md:mt-16 w-full",
        centerContent && "flex flex-col justify-center items-center",
      ]}
    >
      <slot />
    </div>
  </div>
</Component>
