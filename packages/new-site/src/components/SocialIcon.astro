---
import { Icon } from "astro-iconify";

export interface Props {
  name: string;
  href: string;
}

const { name, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="rounded-full p-3 bg-black hover:bg-zinc-700 transition-all duration-150 ease-in-out focus:outline-none focus:ring focus:ring-white focus:bg-zinc-700"
>
  <Icon name={name} class="text-white fill-current w-7 h-7" />
</a>

<style>
  a {
    color: var(--color-text) !important;
    fill: currentColor;
    text-decoration: none;
  }

  div {
    width: calc(var(--space) * 7);
    height: calc(var(--space) * 7);
  }
</style>
