---
import Layout from "../../layouts/Layout.astro";
import Page from "./page.svelte";

import { postFromSlug } from "../../lib/sanity";

const { slug } = Astro.params;

const post = await postFromSlug(slug!);

const data = {
  post,
};
---

<Layout title="Post">
  <Page data={data} client:load />
</Layout>
