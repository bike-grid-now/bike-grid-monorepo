---
import Layout from "../layouts/Layout.astro";

import { getOrganizers } from "../lib/sanity";
import Prose from "../components/Prose.astro";
import Container from "../components/Container.astro";
import Rounded from "../components/Rounded.astro";

const organizers = await getOrganizers();
---

<Layout title="About">
  {
    organizers && organizers.length > 0 && (
      <Container>
        <div class="content">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            {organizers.map((organizer) => (
              <Rounded class="p-12 space-y-8">
                {organizer.image && (
                  <img
                    class="w-36 h-36 rounded-full object-cover"
                    src={organizer.image.imageUrl}
                    alt={organizer.image.altText}
                    width={150}
                  />
                )}
                <Prose text={organizer.description} small>
                  <h2>{organizer.name}</h2>
                </Prose>
              </Rounded>
            ))}
          </div>
        </div>
      </Container>
    )
  }
</Layout>
